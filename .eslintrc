{
  "extends": "@antfu",
  "rules": {
    "no-only-tests/no-only-tests": "off",
    "no-restricted-imports": [
      "error",
      {
        "paths": ["path"]
      }
    ],
    "import/no-named-as-default": "off"
  },
  "overrides": [
    {
      "files": "packages/**/*.*",
      "rules": {
        "no-restricted-imports": [
          "error",
          {
            "paths": ["vitest", "path"]
          }
        ]
      }
    },
    {
      "files": "packages/vitest/**/*.*",
      "rules": {
        "no-restricted-globals": [
          "error",
          "setTimeout",
          "clearTimeout",
          "setInterval",
          "clearInterval",
          "performance"
        ]
      }
    }
  ]
}
